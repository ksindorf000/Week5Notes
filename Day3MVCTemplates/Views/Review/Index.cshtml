@model IEnumerable<Day3MVCTemplates.Models.Review>

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                All
                <strong>Reviews</strong>
            </h2>
            <hr>
        </div>
        @foreach (var item in Model)
            {
            <div class="col-lg-12">
                <div class="panel">
                    <h3 class="panel-heading text-center">
                        @Html.DisplayFor(modelItem => item.ReviewerName)
                        <strong>(@Html.DisplayFor(modelItem => item.Rating))</strong>
                        <hr />
                    </h3>
                    <div class="panel-body">
                        @Html.DisplayFor(modelItem => item.Body)
                    </div>
                </div>
            </div>
        }
        <p><strong>@Html.ActionLink("Create Review", "Create")</strong></p>
        <div class="clearfix"></div>
    </div>
</div>
